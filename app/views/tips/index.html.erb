<div align="center">
<h1>Tips</h1>

<table>
    <thead>
        <th width=20%>Title</th>
        <th width=60%>Advice</th>
        <th width=20%>Subject</th>
    </thead>
    <tbody>
<% @tips.each do |tip| %>
    <tr>
        <td><%= tip.title %></td>
        <td><%= tip.body %></td>
        <td><%= tip.subject %></td>
    </tr>
<% end %>
    </tbody>
</table>
</div>
