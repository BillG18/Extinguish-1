<% current_uri = request.env['PATH_INFO'] %>
<nav class="tips--moderation-navigation">
    <ul class="tips--moderation-navigation--items">
        <% if current_uri != "/tips" %>
            <li><%= link_to "Back", "/tips" %></li>
        <% end %>
        <% if current_uri != "/tip-moderation" %>
            <% if current_user.admin %> 
                <li><%= Tip.where(approved: false).count %> tips require <%= link_to "moderation", "/tip-moderation" %></li>
            <% end %>
        <% end %>
    </ul>
</nav>
