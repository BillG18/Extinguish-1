<% current_uri = request.env['PATH_INFO'] %>
<nav class="tips--moderation-navigation">
    <div class="tips--moderation-navigation--items">
        <%= form_tag(tips_path, method: :get) do %>
            <%= text_field_tag :term, nil, placeholder: "Search tips" %>
            <%= submit_tag 'Search', name: nil, id: "submit-button" %>
        <% end %>
        <% if current_user.admin %> 
            <% if current_uri == ("/tips" || "/tips/")%>
                <div id="nav-link"><%= Tip.where(approved: false).count %> tips in <%= link_to "moderation", "/tips/tip_moderation" %> queue</div>
            <% else %>
                <div id="nav-link"><%= link_to "Back", "/tips" %></div>
            <% end %>
        <% end %>
    </div>
</nav>
